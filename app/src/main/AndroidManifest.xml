<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="lemonsoda.top.customview">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".conflict.ScrollActivity"
            android:label="@string/title_activity_scroll"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".view.FlowActivity" />
        <activity android:name=".touchEvent.TouchEventActivity" />
        <activity
            android:name=".toolbar.ToolbarDemoActivity"
            android:label="@string/title_activity_toolbar_demo"
            android:theme="@style/AppTheme" />
        <activity android:name=".measure.MeasureActivity" />
        <activity android:name=".listview.ListDemoActivity"></activity>
    </application>

</manifest>